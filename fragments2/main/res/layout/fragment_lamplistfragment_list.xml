    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    app:layoutManager="LinearLayoutManager"
    android:layout_above="@+id/add_lamp"
    android:layout_marginBottom="10dp"
    tools:context="com.example.start.l11a.fragments.lighting.LampListFragment"
    tools:listitem="@layout/fragment_lamplistfragment" />

    <Button
