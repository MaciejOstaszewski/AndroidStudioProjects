<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >


    <Button
        android:id="@+id/toastButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:text="Toast" />

    <Button
        android:id="@+id/dialogButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dialog"
        android:layout_above="@+id/toastButton"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/powiadomienieButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Powiadomienie"
        android:layout_above="@+id/nPowiadomienieButton"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/nPowiadomienieButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Niestandardowe Powiadomienie"
        android:layout_alignBottom="@+id/toastButton"
        android:layout_alignParentEnd="true" />
</RelativeLayout>