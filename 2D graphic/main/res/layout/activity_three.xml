<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >


    <ImageView
        android:id="@+id/imageLeft"
        android:layout_width="@dimen/image_left_width"
        android:layout_height="@dimen/image_left_height"


        android:layout_alignParentStart="true"

        android:layout_alignTop="@+id/imageRight"
        android:padding="@dimen/image_left_padding"
        app:srcCompat="@drawable/oval1" />

    <ImageView
        android:id="@+id/imageRight"
        android:layout_width="@dimen/image_right_width"
        android:layout_height="@dimen/image_right_height"


        android:layout_alignParentEnd="true"

        android:layout_centerVertical="true"
        android:padding="@dimen/image_right_padding"
        app:srcCompat="@drawable/oval2" />


</RelativeLayout>